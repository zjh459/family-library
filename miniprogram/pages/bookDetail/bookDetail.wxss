/* pages/bookDetail/bookDetail.wxss */
.container {
  padding-bottom: 30px;
}

/* 书籍头部信息 */
.book-header {
  margin-bottom: 16px;
}

.book-header-content {
  display: flex;
  padding: 16px;
}

.book-cover {
  width: 120px;
  height: 168px;
  border-radius: 6px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.book-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.book-basic-info {
  margin-left: 16px;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.book-title {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 8px;
}

.book-author,
.book-publisher,
.book-date,
.book-isbn {
  font-size: 14px;
  color: #666;
  margin-bottom: 6px;
}

.book-category {
  margin-top: 8px;
}

/* 借阅信息 */
.book-borrow-info {
  padding: 16px;
  margin-bottom: 16px;
}

.borrow-title {
  font-weight: 500;
  margin-bottom: 10px;
  color: var(--accent-color);
}

.borrow-item {
  font-size: 14px;
  color: #666;
  margin-bottom: 6px;
}

/* 书籍简介 */
.book-description {
  padding: 16px;
  margin-bottom: 16px;
}

.desc-title {
  font-weight: 500;
  margin-bottom: 10px;
  color: var(--accent-color);
}

.desc-content {
  font-size: 14px;
  color: #333;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 16px;
  margin-top: 24px;
}

.main-btn {
  margin-bottom: 16px;
}

.sub-buttons {
  margin-top: 12px;
}

/* 弹窗样式 */
.popup-content {
  padding: 24px 16px;
}

.popup-title {
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 20px;
}

.popup-info {
  margin-bottom: 20px;
}

.popup-info view {
  margin-bottom: 8px;
  font-size: 14px;
}

.popup-buttons {
  margin-top: 20px;
}

.delete-dialog-content {
  padding: 16px;
  text-align: center;
  font-size: 14px;
  color: #666;
}

/* 编辑表单 */
.edit-form {
  padding: 16px 0;
}

.cover-upload {
  width: 120px;
  height: 168px;
  margin: 0 auto 24px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.cover-placeholder view {
  margin-top: 8px;
  font-size: 12px;
}

.edit-buttons {
  padding: 16px;
  margin-top: 24px;
}

.save-btn {
  margin-bottom: 12px;
}

/* 分类选择弹窗 */
.category-popup {
  padding: 20px;
}

.category-title {
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 20px;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-list .category-item {
  width: calc(33.33% - 10px);
  height: 44px;
  background-color: #f5f5f5;
  border-radius: var(--border-radius);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15px;
  font-size: 14px;
  transition: all 0.3s;
}

.category-list .category-item.active {
  background-color: var(--accent-color);
  color: white;
}