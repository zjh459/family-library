/* pages/search/search.wxss */
.container {
  padding-bottom: 30px;
}

/* 搜索栏 */
.search-header {
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-btn {
  display: flex;
  align-items: center;
  padding: 0 10px;
}

.filter-btn text {
  margin-left: 4px;
  font-size: 14px;
}

/* 搜索历史 */
.search-history {
  padding: 16px;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.history-title {
  font-size: 16px;
  font-weight: 500;
}

.clear-history {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 12px;
}

.clear-history text {
  margin-left: 4px;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 6px 12px;
  margin-right: 10px;
  margin-bottom: 10px;
  background-color: #f5f5f5;
  border-radius: 16px;
  font-size: 12px;
  color: #666;
}

.history-item text {
  margin-left: 4px;
}

/* 搜索结果 */
.search-results {
  padding: 10px 16px;
}

.loading {
  padding: 30px 0;
}

.loading-text {
  font-size: 14px;
  color: #999;
  margin-left: 10px;
}

/* 书籍卡片 */
.book-card {
  margin-bottom: 16px;
  transition: transform 0.3s;
}

.book-card:active {
  transform: scale(0.98);
}

.book-card-content {
  padding: 12px;
}

.book-cover {
  width: 80px;
  height: 112px;
  border-radius: 4px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.book-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.book-info {
  margin-left: 12px;
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-title {
  font-size: 15px;
  font-weight: 500;
  margin-bottom: 4px;
}

.book-author {
  font-size: 13px;
  color: #666;
  margin-bottom: 4px;
}

.book-publisher {
  font-size: 12px;
  color: #999;
  margin-bottom: 4px;
}

.book-meta {
  font-size: 12px;
  color: #999;
  align-items: center;
  flex-wrap: wrap;
}

.book-date {
  margin-right: 8px;
}

.book-status {
  padding: 2px 6px;
  border-radius: 10px;
  font-size: 10px;
  margin-right: 8px;
}

.status-in {
  background-color: rgba(143, 188, 143, 0.2);
  color: #4CAF50;
}

.status-out {
  background-color: rgba(255, 152, 0, 0.2);
  color: #FF9800;
}

/* 空结果 */
.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.empty-result image {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 筛选弹窗 */
.filter-popup {
  height: 100%;
  padding: 20px;
  display: flex;
  flex-direction: column;
}

.filter-title {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 20px;
  text-align: center;
}

.filter-section {
  margin-bottom: 24px;
}

.filter-section-title {
  font-size: 15px;
  font-weight: 500;
  margin-bottom: 12px;
  color: var(--accent-color);
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
}

.filter-option {
  width: calc(33.33% - 10px);
  height: 36px;
  background-color: #f5f5f5;
  border-radius: var(--border-radius);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10px;
  margin-bottom: 10px;
  font-size: 13px;
  transition: all 0.3s;
}

.filter-option:nth-child(3n) {
  margin-right: 0;
}

.filter-option.active {
  background-color: var(--accent-color);
  color: white;
}

.filter-buttons {
  margin-top: auto;
  padding-bottom: 20px;
}

.reset-btn {
  margin-bottom: 12px;
} 