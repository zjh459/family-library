/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background-color: var(--primary-color);
  min-height: 100vh;
}

.header {
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  background-color: var(--secondary-color);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: var(--text-color);
}

.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.search-bar input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: var(--primary-color);
  border-radius: 35rpx;
}

.search-btn {
  padding: 0 30rpx;
  color: var(--accent-color);
  font-size: 28rpx;
}

.book-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.book-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 10rpx;
}

.book-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.book-title {
  font-size: 24rpx;
  color: var(--text-color);
  text-align: center;
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  font-size: 22rpx;
  color: var(--text-color);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.book-publisher {
  font-size: 12px;
  color: var(--text-color);
  margin-bottom: 2px;
}

.book-meta {
  font-size: 12px;
  color: var(--text-color);
  margin-top: 4px;
  align-items: center;
}

.book-date {
  margin-right: 8px;
}

.book-borrower, 
.book-borrow-date {
  color: var(--text-color);
}

.add-button {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 60rpx;
  color: white;
  background-color: var(--accent-color);
  border-radius: 50%;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
}

.filter-btns {
  display: flex;
}

.sort-btn {
  display: flex;
  align-items: center;
  padding: 5px 10px;
  background-color: rgba(200, 216, 199, 0.4);
  border-radius: var(--border-radius);
}

.sort-btn text {
  margin-left: 4px;
  font-size: 14px;
}

/* 分类导航样式 */
.category-nav {
  margin-bottom: 30rpx;
}

.category-scroll {
  white-space: nowrap;
  padding: 10rpx 0;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.category-item {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  background-color: var(--highlight-color);
  color: var(--text-color);
}

.category-item.active {
  background-color: var(--accent-color);
  color: white;
}

/* 分类展示样式 */
.section {
  margin-bottom: 30rpx;
  background-color: var(--secondary-color);
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

.view-more {
  font-size: 24rpx;
  color: var(--accent-color);
}

/* 空状态样式 */
.empty-card {
  width: 100%;
  padding: 60rpx 0;
  text-align: center;
  color: var(--text-color);
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.empty-state image {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 14px;
  color: var(--text-color);
  margin-bottom: 16px;
}

.btn-wrapper {
  margin-top: 16px;
}

/* 加载状态 */
.loading {
  padding: 30px 0;
}

.loading-text {
  font-size: 14px;
  color: var(--text-color);
  margin-left: 10px;
}

/* 排序弹窗 */
.sort-popup {
  padding: 20px;
}

.sort-title {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 16px;
  text-align: center;
}

.sort-options {
  padding: 8px 0;
}

.sort-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 0;
  border-bottom: 1px solid var(--primary-color);
}

.sort-option:last-child {
  border-bottom: none;
}

.sort-option.active {
  color: var(--accent-color);
} 