.welcome-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: var(--primary-color);
}

.welcome-image {
  width: 100%;
  height: 800rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
}

.welcome-image image {
  width: 750rpx;
  height: 800rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.welcome-content {
  text-align: center;
  margin: 60rpx 0;
  padding: 30rpx;
  background-color: var(--secondary-color);
  border-radius: var(--border-radius);
  width: 80%;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color);
}

.welcome-subtitle {
  font-size: 32rpx;
  color: var(--text-color);
}

.enter-button {
  width: 100%;
  padding: 40rpx;
  margin-bottom: 60rpx;
}

.enter-button button {
  font-size: 32rpx;
  letter-spacing: 4rpx;
} 