.welcome-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
  background-color: var(--primary-color);
  position: relative;
}

.welcome-image {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.welcome-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.welcome-content {
  text-align: center;
  padding: 30rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: var(--border-radius);
  width: 80%;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
  margin-top: 40vh;
}

.welcome-title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color);
}

.welcome-subtitle {
  font-size: 32rpx;
  color: var(--text-color);
}

.enter-button {
  width: 100%;
  padding: 40rpx;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 2;
}

.enter-button button {
  font-size: 32rpx;
  letter-spacing: 4rpx;
} 