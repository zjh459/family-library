.welcome-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #F5F5DC;
}

.welcome-image {
  width: 100%;
  height: 1000rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
}

.welcome-image image {
  width: 750rpx;
  height: 1000rpx;
}

.welcome-content {
  text-align: center;
  margin: 60rpx 0;
}

.welcome-title {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.welcome-subtitle {
  font-size: 32rpx;
  color: #666;
}

.enter-button {
  width: 100%;
  padding: 40rpx;
  margin-bottom: 60rpx;
} 