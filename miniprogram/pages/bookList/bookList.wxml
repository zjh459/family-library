<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input type="text" placeholder="搜索书名、作者或ISBN" bindinput="onSearchInput" value="{{searchText}}" />
    <view class="search-icon" bindtap="onSearch">搜索</view>
  </view>

  <!-- 分类筛选 -->
  <view class="filter-bar">
    <picker 
      bindchange="onCategoryChange" 
      value="{{selectedCategory}}" 
      range="{{categories}}" 
      range-key="name"
    >
      <view class="picker">
        <text>分类：</text>
        <text class="selected-value">{{selectedCategory ? selectedCategory : '全部'}}</text>
        <text class="arrow">▼</text>
      </view>
    </picker>
  </view>

  <!-- 图书列表 -->
  <view class="book-list">
    <view class="book-item" wx:for="{{books}}" wx:key="id" bindtap="goToDetail" data-id="{{item._id}}">
      <view class="book-cover">
        <image src="{{item.coverUrl || '/images/default-cover.png'}}" mode="aspectFill"></image>
      </view>
      <view class="book-info">
        <view class="book-title">{{item.title}}</view>
        <view class="book-author">{{item.author}}</view>
        <view class="book-isbn">ISBN: {{item.isbn}}</view>
        <view class="book-status {{item.status === '可借' ? 'available' : 'unavailable'}}">
          {{item.status}}
        </view>
        <!-- 显示分类标签 -->
        <view class="book-categories" wx:if="{{item.categories && item.categories.length > 0}}">
          <view class="category-tag" wx:for="{{item.categories}}" wx:for-item="category" wx:key="*this">
            {{category}}
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 加载更多 -->
  <view class="loading" wx:if="{{loading}}">加载中...</view>
  <view class="no-more" wx:if="{{!hasMore && books.length > 0}}">没有更多了</view>

  <!-- 空状态 -->
  <view class="empty-state" wx:if="{{!loading && books.length === 0}}">
    <image src="/images/empty.png" mode="aspectFit"></image>
    <text>暂无图书</text>
  </view>

  <!-- 添加按钮 -->
  <view class="add-btn" bindtap="goToAdd">
    <text class="iconfont icon-add"></text>
  </view>
</view> 