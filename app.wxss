/**app.wxss**/
page {
  --primary-color: #F5F5DC; /* 米白色 */
  --secondary-color: #D2B48C; /* 原木色 */
  --accent-color: #8FBC8F; /* 豆沙绿 */
  --alternate-accent: #87CEEB; /* 雾霾蓝 */
  --border-radius: 8px;
  
  background-color: var(--primary-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', Arial, sans-serif;
  color: #333;
  font-size: 14px;
  line-height: 1.5;
}

.container {
  padding: 16px;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: var(--border-radius);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  margin-bottom: 16px;
  overflow: hidden;
  position: relative;
}

.card-content {
  padding: 12px 16px;
}

/* 按钮样式 */
.btn {
  background-color: var(--accent-color);
  color: #fff;
  border-radius: var(--border-radius);
  padding: 8px 16px;
  border: none;
  font-size: 14px;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-secondary {
  background-color: var(--secondary-color);
}

.btn-outline {
  background-color: transparent;
  border: 1px solid var(--accent-color);
  color: var(--accent-color);
}

/* 页面切换动画 */
.page-enter {
  animation: pageEnter 0.4s ease;
}

@keyframes pageEnter {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4px 8px;
  font-size: 12px;
  border-radius: var(--border-radius);
  background-color: #f0f0f0;
  color: #666;
  margin-right: 8px;
}

.tag-accent {
  background-color: rgba(143, 188, 143, 0.2);
  color: var(--accent-color);
}

/* flex布局工具类 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 文本溢出省略号 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 间距工具类 */
.mt-8 {
  margin-top: 8px;
}

.mb-8 {
  margin-bottom: 8px;
}

.mt-16 {
  margin-top: 16px;
}

.mb-16 {
  margin-bottom: 16px;
}

/* 书籍封面样式 */
.book-cover {
  width: 100px;
  height: 140px;
  border-radius: 4px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.book-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
} 